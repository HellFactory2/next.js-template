{
  "name": "untitled",
  "niceName": "ไม่ได้ตั้งชื่อ",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "build:docker": "docker build -t next.js-template .",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:docker": "docker run -d -p 3000:3000 -e NODE_ENV=production --name next.js-template next.js-template",
    "stop:docker": "docker rm -f next.js-template && docker rmi next.js-template"
  },
  "dependencies": {
    "axios": "latest",
    "dotenv": "latest",
    "express": "latest",
    "http-proxy-middleware": "latest",
    "next": "latest",
    "nprogress": "latest",
    "styled-components": "latest"
  },
  "devDependencies": {
    "react": "latest",
    "react-dom": "latest",
    "@types/express": "latest",
    "@types/node": "latest",
    "@types/nprogress": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/styled-components": "latest",
    "autoprefixer": "latest",
    "babel-plugin-styled-components": "latest",
    "cross-env": "latest",
    "nodemon": "latest",
    "postcss": "latest",
    "sass": "latest",
    "tailwindcss": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "exec": "ts-node --project tsconfig.server.json server/index.ts",
    "ext": "js ts"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ]
      }
    },
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "license": "MIT"
}
