{
  "name": "untitled",
  "niceName": "ไม่ได้ตั้งชื่อ",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon",
    "format": "prettier --write **/*.{js,jsx,ts,tsx}",
    "prebuild": "rimraf dist && rimraf .next",
    "build": "next build && tsc --project tsconfig.server.json",
    "build:docker": "docker build -t next.js-template .",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:docker": "docker run -d -p 3000:3000 --env-file .env -e NODE_ENV=production --name next.js-template next.js-template",
    "stop:docker": "docker rm -f next.js-template && docker rmi next.js-template"
  },
  "dependencies": {
    "dotenv": "latest",
    "fastify": "latest",
    "fastify-http-proxy": "latest",
    "next": "latest",
    "nprogress": "latest",
    "recoil": "latest",
    "sitemap": "latest",
    "zlib": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/nprogress": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "autoprefixer": "latest",
    "cross-env": "latest",
    "nodemon": "latest",
    "postcss": "latest",
    "react": "latest",
    "react-dom": "latest",
    "rimraf": "latest",
    "sass": "latest",
    "tailwindcss": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "optionalDependencies": {
    "prettier": "^2.3.1"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "exec": "clear && ts-node --project tsconfig.server.json server/index.ts",
    "ext": "js ts"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ]
      }
    },
    "plugins": []
  },
  "license": "MIT"
}
