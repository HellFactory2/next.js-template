{
  "name": "untitled",
  "niceName": "ไม่ได้ตั้งชื่อ",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "build:docker": "docker build -t next.js-template .",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:docker": "docker run -d -p 3000:3000 -e NODE_ENV=production --name next.js-template next.js-template",
    "stop:docker": "docker rm -f next.js-template && docker rmi next.js-template"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.6",
    "next": "^10.0.5",
    "nprogress": "^0.2.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.20",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.7",
    "autoprefixer": "^10.2.1",
    "babel-plugin-styled-components": "^1.12.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.4",
    "postcss": "^8.2.3",
    "sass": "^1.32.2",
    "tailwindcss": "^2.0.2",
    "ts-node": "^8.10.2",
    "typescript": "4.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "exec": "ts-node --project tsconfig.server.json server/index.ts",
    "ext": "js ts"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ]
      }
    },
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "license": "MIT"
}
